<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_cast_photo"
        android:layout_width="96dp"
        android:layout_height="75dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_cast_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin4dp"
        android:textSize="@dimen/textSize12sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_cast_photo"
        app:layout_constraintStart_toStartOf="@+id/imageView_cast_photo"
        app:layout_constraintTop_toBottomOf="@+id/imageView_cast_photo"
        tools:text="@string/dummy_movie_name" />

</androidx.constraintlayout.widget.ConstraintLayout>